
<%= form_for(shoe) do |f|%>
  <div>
    <%= f.label :shoe_type %>
    <%= f.text_field :shoe_type %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <p> Select a Brand that already exists: </p>
  <div>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: 'Select One'%>

  </div>

  <p> Or create a new Brand: </p>
  <div>
    <%=f.fields_for :brand do |b| %>
      <%= b.label :name %>
      <%= b.text_field :name %>
    <% end %>
  </div>
  <br>
  </div >
  <%= f.submit %>
<% end %>