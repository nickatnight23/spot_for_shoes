<% @shoes.each do |sh| %>

  <h2><%=sh.shoe_type%> -<%=sh.brand.name%> </h2>
  <br>
  <%=link_to "Write a review", new_shoe_review_path(sh.id)%>
  <br>
  <%=link_to "rating_review", top_rated_path%>
